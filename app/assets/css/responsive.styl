@media (max-width: 555px)
  #modal-container
    &.active
      .modal
        height 100%
        width 100%
        margin 0
        max-width 100%

    .fraternities
      max-height 100%
      height 100%
      overflow auto

  header
    height auto
    > h1
      text-align center
      float none

  #choose-fraternity
    float none
    margin 0 40px 20px 40px

    a
      display block

  #grid
    .main-bubbles
      a
        display block
        width 100%
        height 50px
        line-height 50px
        border-radius 10px

        &:hover
          line-height 50px
          height 50px
          border-radius 10px
          box-shadow 0 5px 0 #ccc

        span
          display block

        i.fa
          display none

    .union-specific-articles
      div
        display block
        height auto
        width 100%
        float none
        padding 0
        margin-bottom 15px


  footer
    text-align center
