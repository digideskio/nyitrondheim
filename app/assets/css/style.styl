@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Open\+Sans:400,700')
@import url('http://fonts.googleapis.com/css?family=Montserrat:400,700');
@import url('http://fonts.googleapis.com/css?family=Lobster:400,700');

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

$font-family = Montserrat, Lato, 'Open Sans', Helvetica, sans-serif

a
  text-decoration none
  color #444
  cursor pointer

body
  font-family $font-family
  color #555
  line-height 1.8
  font-size 16px
  background url('/images/vaattakammen.jpg') 50% center fixed
  background-size cover

#top-bar
  background rgba(0, 0, 0, .4)
  padding 6px
  color #ccc

.middle
  max-width 960px
  margin 0 auto

header
  height 150px
  line-height 150px

  > h1
    float left

h1
  font-size 40px
  font-family Lobster, Montserrat, serif
  font-weight 700

  &.title, a
    margin-top 50px
    color #fff

  &.no-article-chosen
    margin-top 30px
    vertical-align middle
    text-align center

button
  &.wide
    width 100%

#choose-fraternity
  float right

  a
    line-height 40px
    background linear-gradient(#fff, #ccc)
    color #2F3741
    padding 0 20px
    display inline-block
    border-radius 10px

    &:hover
      background linear-gradient(#ccc, #fff)

  i
    color #888
    margin-left 10px

section
  background rgba(255, 255, 255, .85)
  padding 40px
  border-radius 20px


footer
  clear both
  padding 40px
  text-align right
  color #fff

  a
    color yellow

.clear
  clear both

.no-fraternity-chosen
  font-size 22px
  text-align center

h2#fraternity
  font-size 22px
  margin 10px 0

#article-content
  h2
    font-size 24px
    font-weight 700
    color #570A05
  p
    margin-top 10px

  .description
    font-weight 700

  .body
    margin-bottom 30px

  img
    max-width 100%
    border-radius 5px

a.back
  color #999

thead
  tr.fc-first
    background-color #ff7c82

@import 'app/assets/css/frontpage'
@import 'app/assets/css/modal'
@import 'app/assets/css/admin'
@import 'app/assets/css/calendar'
@import 'app/assets/css/responsive'
