@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Averia\+Sans\+Libre:400,700')
@import url('http://fonts.googleapis.com/css?family=Open\+Sans:400,700')
@import url('http://fonts.googleapis.com/css?family=Vollkorn:400,700')
@import url('http://fonts.googleapis.com/css?family=Montserrat:400,700');
@import url('http://fonts.googleapis.com/css?family=Lobster:400,700');

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

$font-family = Montserrat, Lato, 'Open Sans', Helvetica, sans-serif

a
  text-decoration none
  color #444
  cursor pointer

body
  font-family $font-family
  color #444
  line-height 1.8
  font-size 16px
  background url('/images/vaattakammen.jpg') fixed
  background-size cover

#top-bar
  background rgba(0, 0, 0, .4)
  padding 6px

  div
    centered()
    color #ccc

.middle
  max-width 960px
  margin 0 auto

header
  height 150px
  line-height 150px

  > h1
    float left

h1
  font-size 40px
  font-family Lobster, Montserrat, serif
  font-weight 700

  &.title
  a
    color #fff

  &.no-article-chosen
    margin-top 30px
    vertical-align middle
    text-align center

button
  &.wide
    width 100%

#choose-fraternity
  float right

  a
    line-height 40px
    background linear-gradient(#fff, #ccc)
    color #2F3741
    padding 0 20px
    display inline-block
    border-radius 10px

    &:hover
      background linear-gradient(#ccc, #fff)

  i
    color #888
    margin-left 10px

section
  background rgba(255, 255, 255, .85)
  padding 40px
  border-radius 20px

#grid
  text-align center

  h2
    border-bottom 2px solid #ddd
    font-size 24px
    font-weight 700
    text-align left
    margin 20px 0

#grid
  .main-bubbles
    a
      color #fff
      display inline-block
      height 200px
      width @height
      border-radius (@height/2) - 20px
      line-height @height
      text-align center
      font-size 20px
      font-weight bold
      transition all .2s
      margin 0 15px 15px 0
      background rgb(53, 61, 71)

      i.fa
        font-size 45px
        display inline

      span
        display none

      &:hover
        line-height @height
        border-radius (@height/3)

        i.fa
          display none

        span
          display block

  .small-bubbles
    margin-top 20px
    a
      display inline-block
      color #fff
      height 80px
      width 20%
      line-height @height
      font-weight 400
      font-size 16px
      background rgb(53, 61, 71)
      transition background .1s

      &:first-child
        border-radius 10px 0 0 10px

      &:last-child
        border-radius 0 10px 10px 0

      &:nth-child(1)
        background #570A05

      &:nth-child(2)
        background #E76400

      &:nth-child(3)
        background #FFA400

      &:nth-child(4)
        background #F73700

      &:nth-child(5)
        background #580B0E

      &:hover
        font-weight 700
        background rgba(0, 0, 0, .7)

  .union-specific-articles
    margin-top 20px

    div
      width 50%
      float left
      height 120px
      text-align left
      padding 10px
      color #777

      &:hover
        cursor pointer
        transition background-color .25s ease-in
        background-color rgba(255, 62, 72, 0.1)
        color #555

      h3 a
        font-size 20px
        font-weight 700
        text-transform uppercase
        color #440507


#content
  background #fff
  border-radius 5px

  h2
    font-size 20px
    font-weight 700

footer
  clear both
  padding 40px
  text-align right
  color #fff

  a
    color yellow

.clear
  clear both

.no-fraternity-chosen
  font-size 22px
  text-align center

h2#fraternity
  font-size 22px
  margin 10px 0

#article-content
  h2
    font-size 24px
    font-weight 700
    border-bottom 2px solid #ddd
  p
    margin-top 10px
  .description
    font-weight 700
  .body
    margin-bottom 20px

#modal-container
  background rgba(0, 0, 0, .8)
  fixed left right bottom top
  height 0
  opacity 0
  width 0
  transition opacity .2s

  &.active
    height 100%
    width 100%
    opacity 1

    .modal
      width 640px
      height 320px
      background #fff
      margin 150px auto
      border-radius 10px
      box-shadow 0 -4px 0 #ddd
      padding 20px
      overflow scroll

      h2
        color #002C5C
        font-weight 700

.fraternities
  a
    display block
    padding 5px 10px
    border-bottom 1px solid #eee

    &:hover
      background #fafafa

.right-button
  // Ghetto-CSS, just to put up a
  margin-top -4%
  float right


.back
  text-align center

#admin-article-list
  overflow-y scroll
  max-height 200px
  .article-li
  .new-article-li
    border-bottom 1px solid #ddd

  .article-li:hover
  .new-article-li:hover
    cursor pointer

  .article-li.selected-article
  .new-article-li.selected-article
    transition:background .25s ease-in
    background rgba(253,27,45, 0.1)

  .new-article-li
    font-size 1.1em
    color #B62121

  .new-article-li:hover
    color #d65959

  .article-li:hover
    color #666

#admin-event-list
  margin-top 10px
  .event-li
  .new-event-li
    border-bottom 1px solid #ddd

  .event-li:hover
  .new-event-li:hover
    cursor pointer

  .event-li.selected-event
  .new-event-li.selected-event
    transition:background .25s ease-in
    background rgba(95, 255, 29, 0.1)

  .new-event-li
    font-size 1.1em
    color #007412

  .new-event-li:hover
    color #008715

  .event-li:hover
    color #666

.admin-article-main
  border-left 2px solid #ddd

.legend
  margin-left 8%

  &#school
    color #5cb85c
  &#union
    color #5bc0de
  &#common
    float left
    color #f0ad4e
  &#other
    float left
    color #d9534f

#calendar
  width 100%
  height 70%
  border-radius 1.5%
  opacity 0.75

.date
  #to-date
    margin-left 10px

.ta-toolbar
  margin-bottom 10px

.ta-editor
  height auto
  overflow auto
  font-family inherit
  font-size 100%
  min-height 200px

span.fc-header-title
  font-size 140%

thead
  tr.fc-first
    background-color #ff7c82

.drop-area
  //background #00A5CD
  border 2px dashed #1c8ecd
  color #00A5CD
  width 100%
  height 40px
  text-align center
  &.dragover
    //background #3bcd32
    color #3bcd32
    border 2px dashed #41a815
