categories = {
  first: #570A05,
  second: #E76400,
  third: #FFA400,
  fourth: #F73700,
  fifth: #580B0E
}

#grid
  text-align center

  h2
    border-bottom 2px solid #ddd
    font-size 24px
    font-weight 700
    text-align left
    margin 20px 0

  .main-bubbles
    a
      color #fff
      display inline-block
      height 200px
      width @height
      border-radius (@height/2) - 20px
      line-height @height
      text-align center
      font-size 20px
      font-weight bold
      transition all .2s
      margin 0 15px 15px 0
      background rgb(53, 61, 71)

      i.fa
        font-size 45px
        display inline

      span
        display none

      &:hover
        line-height @height
        border-radius (@height/3)

        i.fa
          display none

        span
          display block

  .small-bubbles
    margin-top 20px
    a
      display inline-block
      color #fff
      height 80px
      width 20%
      line-height @height
      font-weight 400
      font-size 16px
      //background rgb(53, 61, 71)
      background #580B0E
      transition background .1s

      &:first-child
        border-radius 10px 0 0 10px

      &:last-child
        border-radius 0 10px 10px 0

      for category, bg in categories
        &.{category}
          background bg
          &:hover
            font-weight 700
            background lighten(@background, 20%)

  .union-specific-articles
    margin-top 20px

    div
      width 50%
      float left
      height 120px
      text-align left
      padding 15px
      color #777
      border-radius 10px
      border-bottom 2px solid transparent

      &:hover
        cursor pointer
        transition background-color .25s
        background-color rgba(255, 255, 255, .4)
        border-bottom 2px solid #ddd
        color #555

      h3
        font-size 20px
        font-weight 700
        text-transform uppercase
        color #440507
        text-shadow 2px 1px 0 #ccc
