html
  head
    meta(charset='utf-8')
    title Admin Test
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')

  body
    - var action = '/api/unions/' + union_id + '/articles'
    
    #top-bar
      div
        p Velkommen til Trondheim!
    
    #container
      header
        h1(style="color: #fff; margin-top: 50px") Ny Artikkel (Simpel Test)

      section
        form(method='post', action=action, role='form')
          .form-group
            label(for='title') Tittel
            input.form-control#title(type='text', name='title', placeholder='Title')
          .form-group
            label(for='priority') Prioritet
            select.form-control#priority(name='priority')
              each i in [1, 2, 3, 4, 5]
                option= i
          .form-group
            label(for='description') Beskrivelse
            textarea.form-control#description(rows='2', name='description', placeholder='Description')
          .form-group
            label(for='body') Tekst
            textarea.form-control#body(rows='5', name='body', placeholder='Body')

          button.btn.btn-primary(type='submit') Send
