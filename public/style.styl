@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Averia\+Sans\+Libre:400,700')
@import url('http://fonts.googleapis.com/css?family=Open\+Sans:400,700')
@import url('http://fonts.googleapis.com/css?family=Vollkorn:400,700')
@import url('http://fonts.googleapis.com/css?family=Montserrat:400,700');

global-reset()

*
  box-sizing border-box
  font-smoothing antialiased

$font-family = Montserrat, Lato, 'Open Sans', Helvetica, sans-serif

a
  text-decoration none
  color #444

body
  font-family $font-family
  color #444
  line-height 1.8
  font-size 16px
  background url('images/brygga1.png') fixed
  background-size cover
  position relative

#top-bar
  background rgba(0, 0, 0, .6)
  padding 6px

  div
    width 960px
    margin 0 auto
    color #ccc

#container
  width 960px
  margin 0 auto

header
  height 150px
  line-height 150px

h1
  font-size 40px
  font-family Montserrat, serif
  font-weight 700
  float left

  a
    color #fff

#choose-fraternity
  float right

  a
    line-height 40px
    background linear-gradient(#fff, #ccc)
    color #2F3741
    padding 0 20px
    display inline-block
    border-radius 10px

    &:hover
      background linear-gradient(#ccc, #fff)

  i
    color #888
    margin-left 10px

section#grid
  background rgba(255, 255, 255, .6)
  padding 40px
  border-radius 20px

  article
    color #fff
    display block
    float left
    height 200px
    width @height
    border-radius (@height/2)
    line-height @height
    text-align center
    font-size 20px
    font-weight bold
    transition border-radius .5s
    margin 0 10px 10px 0
    background rgba(47, 55, 65, .9)

    &:hover
      width @height
      height @height
      line-height @height
      border-radius (@height/2) - 20px

    a
      color #fff
      display block

footer
  clear both
  padding 40px
  text-align right
  color #fff

  p
    background #444

.clear
  clear both

.no-fraternity-chosen
  font-size 22px
  text-align center

h2#fraternity
  font-size 22px
  margin 10px 0


#modal-container
  background rgba(0, 0, 0, .8)
  fixed left right bottom top
  height 0
  opacity 0
  width 0
  transition opacity .5s

  &.active
    height 100%
    width 100%
    opacity 1

    .modal
      width 640px
      height 320px
      background #fff
      margin 150px auto
      border-radius 10px
      box-shadow 0 -4px 0 #ddd
      padding 20px
      overflow scroll

.fraternities
  a
    display block
